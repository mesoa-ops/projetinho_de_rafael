<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include("../partials/cabecalho.ejs"); %>
</head>
<body>
    <div class="container">
        <div><a href="/disciplinas/cadastrar" class="btn btn-success">Cadastrar</a></div>
        <h2>Relatório de Disciplinas</h2>
    <% if(status=="1"){%>
        <div class="alert alert-success alert-dismissible">
            Disciplina cadastrada com <b>sucesso!</b>
            <button type="button" class="btn-close" data-bs-dismiss="alert" slot="end"></button><br>
        </div>
    <% }else if(status=="2"){ %>
        <div class="alert alert-danger alert-dismissible">
            Disciplina removida com <b>sucesso!</b>
            <button type="button" class="btn-close" data-bs-dismiss="alert" slot="end"></button><br>
        </div>
    <% }else if(status=="3"){ %>
        <div class="alert alert-warning alert-dismissible">
            Disciplina atualizada com <b>sucesso!</b>
            <button type="button" class="btn-close" data-bs-dismiss="alert" slot="end"></button><br>
        </div>
    <% }; %>
    <table class="table table-striped">
        <tr>
            <th>Nome</th>
            <th>Carga Horária</th>
            <th>Professor</th>
            <th>Detalhar</th>
            <th>Atualizar</th>
            <th>Excluir</th>
        </tr>
        <%for(const x of disciplinas){%>
            <tr>
                <td><div><%=x.nome%></div></td>
                <td><div><%=x.cargaHoraria%></div></td>
                <td><div><%=x.professor%></div></td>
                <td><a href="/disciplinas/<%=x._id%>" class="btn btn-info">Detalhar</a></td>
                <td><a href="/disciplinas/atualizar/<%=x._id%>" class="btn btn-warning">Atualizar</a></td>
                <td><a onclick="return confirm('Deseja mesmo excluir essa disciplina?')" href="/disciplinas/remover/<%=x._id%>" class="btn btn-danger">Excluir</a></td>
            </tr>
        <% }; %>
    </table>
    <br><div><a href="/" class="btn btn-primary">Página Inicial</a></div>
    </div>
    <%- include("../partials/rodape.ejs"); %>
</body>
</html>